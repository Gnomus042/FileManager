@model DataLibrary.Consultation

<style>

    .test-content {
        padding-left: 10px;
    }
</style>

@using (Html.BeginForm("UpdateConsultation", "Test", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="test-content">
            <div class="form-group">
                @Html.EditorFor(model => model.cons_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cons_id, "", new { @class = "text-danger" })
            </div>

            <div class="form-group" >
                @Html.LabelFor(model => model.cons_type, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-6">
                    @Model.ConsultationType.ct_value
                    @Html.EditorFor(model => model.cons_type, new { htmlAttributes = new { @class = "form-control",  @type = "hidden" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.cons_komment, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.cons_komment, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cons_komment, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="Зберегти" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
